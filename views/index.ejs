<%- include('header'); -%>
<div id="error-box" class="alert alert-danger invisible" role="alert">
  Please attach at least one file!
</div>
<div class="container px-3">
  <div class="upload-box card text-center">
    <div class="card-header">Upload PDF Files</div>
    <div class="card-body">
      <h5 class="card-title">Merge 2 or more PDF files</h5>
      <p class="card-text">
        Click the button below to upload the files that you want to join.
      </p>
      <form
        class="needs-validation"
        action="/"
        method="post"
        enctype="multipart/form-data"
        novalidate
      >
        <input
          id="pdf-entry"
          class="form-control mb-3"
          type="file"
          name="pdf-files"
          accept=".pdf"
          multiple
          required
        />

        <input
          type="submit"
          name="submit"
          class="btn btn-outline-secondary btn-lg mx-3"
          value="Trim Files"
        />
        <input
          type="submit"
          name="submit"
          class="btn btn-secondary btn-lg mx-3"
          value="Quick Merge"
        />
      </form>
    </div>
  </div>
</div>

